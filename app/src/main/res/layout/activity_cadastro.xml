<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fatec.br_bus.CadastroActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_linha"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Linha"
        android:layout_toStartOf="@+id/btn_pesquisar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:id="@+id/btn_pesquisar"
        android:layout_alignTop="@+id/input_linha"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_terminal"
        android:layout_below="@+id/input_linha"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_pesquisar"
        android:text="Terminal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações de Horário"
        android:id="@+id/btn_configuracaoHorario"
        android:layout_centerVertical="true"
        android:onClick="ClickbtnConfiguracaoHorario"
        android:layout_alignEnd="@+id/input_terminal"
        android:layout_toEndOf="@+id/btn_img" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ponto de Onibus"
        android:id="@+id/btn_pontoOnibus"
        android:onClick="ClickbtnPontoDeBus"
        android:layout_below="@+id/btn_configuracaoHorario"
        android:layout_alignEnd="@+id/btn_configuracaoHorario"
        android:layout_alignStart="@+id/btn_configuracaoHorario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btn_img"
        android:layout_alignTop="@+id/btn_configuracaoHorario"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btn_img2"
        android:layout_alignTop="@+id/btn_pontoOnibus"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_pontoOnibus"
        android:layout_alignEnd="@+id/btn_img" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btn_salvarCadastro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
